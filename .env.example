# Environment Configuration Template
# คัดลอกไฟล์นี้เป็น .env และเปลี่ยนค่าให้เหมาะสม

# Application Configuration
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration - ใช้คำสั่ง: npm run generate:jwt-secrets เพื่อสร้างค่าใหม่
JWT_SECRET=your_jwt_secret_here_use_npm_run_generate_jwt_secrets
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_use_npm_run_generate_jwt_secrets
JWT_REFRESH_EXPIRES_IN=7d

# Social Auth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret

# File Upload
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Other Configuration
BCRYPT_ROUNDS=12
