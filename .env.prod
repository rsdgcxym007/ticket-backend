# Production Environment Configuration for AWS
NODE_ENV=production
PORT=4000

# Database Configuration (AWS RDS PostgreSQL)
DATABASE_HOST=database-1.c8p4wog2qp5o.us-east-1.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=Password123!
DATABASE_NAME=ticket_backend
DATABASE_SSL=true
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# OAuth Configuration (Production Keys)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
FACEBOOK_APP_ID=your-production-facebook-app-id
FACEBOOK_APP_SECRET=your-production-facebook-app-secret
LINE_CHANNEL_ID=your-production-line-channel-id
LINE_CHANNEL_SECRET=your-production-line-channel-secret

# API Configuration
API_PREFIX=api
API_VERSION=v1
SWAGGER_ENABLED=false
SWAGGER_PATH=api/docs

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://yourdomain.com

# Security Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/ticket-backend/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/pm2
ENABLE_CONSOLE_LOG=false

# Payment Configuration
PROMPTPAY_API_KEY=your-production-promptpay-api-key
PAYMENT_CALLBACK_URL=https://yourdomain.com/api/payment/callback

# Email Configuration (if using)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@yourdomain.com

# Cache Configuration (Redis if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring & Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# AWS Configuration (if needed for S3, etc.)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true
