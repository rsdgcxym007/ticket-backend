# Test Environment Configuration
NODE_ENV=test
PORT=4001

# Database Configuration (Test Database - GitHub Actions compatible)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=Password123!
DATABASE_NAME=test_db
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false
DATABASE_DROP_SCHEMA=true

# JWT Configuration (Test)
JWT_SECRET=test-jwt-secret-for-testing-purposes-only
JWT_EXPIRES_IN=1h

# OAuth Configuration (Test/Mock)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
FACEBOOK_APP_ID=test-facebook-app-id
FACEBOOK_APP_SECRET=test-facebook-app-secret
LINE_CHANNEL_ID=test-line-channel-id
LINE_CHANNEL_SECRET=test-line-channel-secret

# API Configuration
API_PREFIX=api
API_VERSION=v1
SWAGGER_ENABLED=false

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Configuration (Relaxed for testing)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./test/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_PATH=./test/logs
ENABLE_CONSOLE_LOG=false

# Payment Configuration (Test/Mock)
PROMPTPAY_API_KEY=test-promptpay-api-key
PAYMENT_CALLBACK_URL=http://localhost:4001/api/payment/callback

# Cache Configuration (Test)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Monitoring & Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Test-specific Configuration
TEST_TIMEOUT=30000
TEST_CLEANUP=true
