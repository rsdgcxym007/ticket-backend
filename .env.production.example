# ========================================
# üåê DOMAIN CONFIGURATION
# ========================================

# Production Domain URLs
FRONTEND_URL=https://patongboxingstadiumticket.com
BACKEND_URL=https://api-patongboxingstadiumticket.com
API_URL=https://api-patongboxingstadiumticket.com/api

# Additional CORS Origins (comma-separated)
ADDITIONAL_CORS_ORIGINS=https://admin.patongboxingstadiumticket.com,https://dashboard.patongboxingstadiumticket.com

# ========================================
# üöÄ SERVER CONFIGURATION
# ========================================
PORT=4000
NODE_ENV=production
API_VERSION=v1

# ========================================
# üìö SWAGGER DOCUMENTATION
# ========================================
SWAGGER_ENABLED=true

# ========================================
# üîê JWT CONFIGURATION
# ========================================
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_here
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/patong_boxing_stadium
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=patong_boxing_stadium
DB_SCHEMA=public

# ========================================
# üìß EMAIL CONFIGURATION (Gmail SMTP)
# ========================================
GMAIL_USER=info@patongboxingstadiumticket.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here
EMAIL_FROM=info@patongboxingstadiumticket.com
EMAIL_FROM_NAME=Patong Boxing Stadium

# ========================================
# üí≥ PAYMENT CONFIGURATION
# ========================================
PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
PAYMENT_MERCHANT_ID=your_merchant_id
PAYMENT_SECRET_KEY=your_payment_secret_key

# ========================================
# üìä ANALYTICS & MONITORING
# ========================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=your_sentry_dsn_here

# ========================================
# üîß REDIS CONFIGURATION (Optional)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ========================================
# üì± MOBILE APP CONFIGURATION
# ========================================
MOBILE_APP_PACKAGE=com.patongboxingstadium.ticket
MOBILE_APP_VERSION=1.0.0

# ========================================
# üåç LOCALIZATION
# ========================================
DEFAULT_LOCALE=th
SUPPORTED_LOCALES=th,en

# ========================================
# üö¶ RATE LIMITING
# ========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ========================================
# üìÅ FILE UPLOAD
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# ========================================
# üè• HEALTH CHECK
# ========================================
HEALTH_CHECK_TIMEOUT=5000

# ========================================
# üîí SECURITY
# ========================================
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# ========================================
# üìà PERFORMANCE
# ========================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300
